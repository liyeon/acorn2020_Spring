<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-config.dtd">
  <configuration>
  <!-- type 별칭 등록 -->
  <!-- Dto 타입을 별칭으로 지정 할 수 있다. -->
  <typeAliases>
  	<typeAlias type="com.gura.spring05.users.dto.UsersDto" alias="usersDto"/>
  	<typeAlias type="com.gura.spring05.file.dto.FileDto" alias="fileDto"/>
  	<typeAlias type="com.gura.spring05.cafe.dto.CafeDto" alias="cafeDto"/>
  </typeAliases>
 
  <!-- Mapper등록 -->
  <!-- 사용할 Mapper목록 설정 -->
  <!-- servlet-context.xml의 SqlSessionFactory 객체에서 사용한다. -->
  	<mappers>
  		<mapper resource="com/gura/spring05/mybatis/UsersMapper.xml"/>
  		<mapper resource="com/gura/spring05/mybatis/FileMapper.xml"/>
  		<mapper resource="com/gura/spring05/mybatis/CafeMapper.xml"/>
  	</mappers>
  </configuration>